{
	"name": "Pure",
	"author": "Riguz Lee",
	"url": "https://github.com/drriguz/Pure",
	"descriptionmsg": "pure-desc",
	"namemsg": "skinname-pure",
	"license-name": "GPL-2.0+",
    "requires": {
		"MediaWiki": ">= 1.35.0"
	},
	"manifest_version": 2,
	"type": "skin",
	"ValidSkinNames": {
		"pure": "Pure"
	},
	"AutoloadClasses": {
		"SkinPure": "Pure.skin.php",
        "PureTemplate": "Pure.template.php"
	},
	"MessagesDirs": {
		"FooBar": "i18n"
	},
    "ResourceModules": {
		"skins.pure.styles":  {
            "position": "top",
            "styles": [
				"assets/css/bulma.min.css",
				"assets/font-awesome/css/font-awesome.min.css",
                "assets/css/pure.css",
				"assets/css/dracula.css"
            ]
        },
        "skins.pure.js":  {
            "position": "bottom",
            "scripts": [
                "assets/js/init.js"
            ],
            "dependencies": [
                "jquery.cookie"
            ]
        }
	},
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteSkinPath": "Pure"
	}
}